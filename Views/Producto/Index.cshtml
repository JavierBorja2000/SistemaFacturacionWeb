@model IEnumerable<SistemaFacturacionWeb.Models.Producto>

@{
    ViewData["Title"] = "Productos";
}
    
<div class="py-3">
    <div class="container mx-auto px-4 py-2">
        <h1 class="text-center text-3xl uppercase bold tracking-wider">
            @ViewData["Title"]
        </h1>
        <div class="flex flex-col mt-10 items-center">
            <div class="flex w-full md:w-2/3 ml-auto mr-auto justify-center my-5 lg:my-0 lg:justify-end">
                <a asp-action="Create" asp-controller="Producto"><button type="button" class="text-gray-200 bg-teal-600 hover:bg-gray-900 font-semibold uppercase tracking-wider transition-all duration-500 px-3 py-2 mb-5 rounded-md cursor-pointer">Agregar producto</button> </a>
            </div>
                <div class="relative w-full 2xl:w-2/3 ml-auto mr-auto overflow-x-auto shadow-md sm:rounded-lg">
                    @if (Model.Count() > 0)
                        {
                            <table class="w-full text-md text-left">
                                <thead class="uppercase font-bold text-center tracking-wide bg-teal-500 text-white">
                                    <tr>
                                        <td class="border border-teal-800 px-3 py-1">@Html.DisplayNameFor( m => m.Codigo_producto) </td>
                                        <td class="border border-teal-800 px-3 py-1">@Html.DisplayNameFor( m => m.Nombre) </td>
                                        <td class="border border-teal-800 px-3 py-1">@Html.DisplayNameFor( m => m.Descripcion) </td>
                                        <td class="border border-teal-800 px-3 py-1">@Html.DisplayNameFor( m => m.Precio) </td>
                                        <td class="border border-teal-800 px-3 py-1">@Html.DisplayNameFor( m => m.Costo) </td>
                                        <td class="border border-teal-800 px-3 py-1">@Html.DisplayNameFor( m => m.Existencia) </td>
                                        <td class="border border-teal-800 px-3 py-1">@Html.DisplayNameFor( m => m.Estado) </td>
                                        <td class="border border-teal-800 px-3 py-1">Acciones</td>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach(var item in Model)
                                    {
                                        <tr class="text-center">
                                            <td class="border border-teal-800 px-3 py-1">@item.Codigo_producto</td>
                                            <td class="border border-teal-800 px-3 py-1">@item.Nombre</td>
                                            <td class="border border-teal-800 px-3 py-1">@item.Descripcion</td>
                                            <td class="border border-teal-800 px-3 py-1">@item.Precio</td>
                                            <td class="border border-teal-800 px-3 py-1">@item.Costo</td>
                                            <td class="border border-teal-800 px-3 py-1">@item.Existencia</td>
                                            <td class="border border-teal-800 px-3 py-1">@item.Estado</td>
                                            <td class="border border-teal-800 px-3 py-1 text-teal-600 hover:text-teal-700">@Html.ActionLink("Editar","Editar", new{Codigo_producto = item.Codigo_producto}) | @Html.ActionLink("Eliminar","Eliminar", new{Codigo_producto = item.Codigo_producto})</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                </div>
        </div>
    </div>
</div>