@model IEnumerable<SistemaFacturacionWeb.Models.Producto>

@{
    ViewData["Title"] = "Productos";
}
    
<div class="py-3">
    <div class="container mx-auto px-4 py-2">
        <h1 class="text-center text-3xl uppercase bold tracking-wider">
            @ViewData["Title"]
        </h1>
        <div class="flex flex-col mt-10 items-center">
            <div class="flex w-full md:w-2/3 ml-auto mr-auto justify-center my-5 lg:my-0 lg:justify-end">
                <a asp-action="Create" asp-controller="Producto"><button type="button" class="bg-teal-600 px-3 py-2 uppercase text-white mb-5 rounded-md hover:bg-teal-700 cursor-pointer">Agregar producto</button> </a>
            </div>
                <div class="relative w-full md:w-2/3 ml-auto mr-auto overflow-x-auto shadow-md sm:rounded-lg">
                    @if (Model.Count() > 0)
                        {
                            <table class="w-full text-md text-left">
                                <thead class="uppercase font-bold text-center tracking-wide bg-teal-600 text-white">
                                    <tr>
                                        <td>@Html.DisplayNameFor( m => m.Codigo_producto) </td>
                                        <td>@Html.DisplayNameFor( m => m.Nombre) </td>
                                        <td>@Html.DisplayNameFor( m => m.Descripcion) </td>
                                        <td>@Html.DisplayNameFor( m => m.Precio) </td>
                                        <td>@Html.DisplayNameFor( m => m.Costo) </td>
                                        <td>@Html.DisplayNameFor( m => m.Existencia) </td>
                                        <td>@Html.DisplayNameFor( m => m.Estado) </td>
                                        <td>Acciones</td>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach(var item in Model)
                                    {
                                        <tr class="text-center">
                                            <td>@item.Codigo_producto</td>
                                            <td>@item.Nombre</td>
                                            <td>@item.Descripcion</td>
                                            <td>@item.Precio</td>
                                            <td>@item.Costo</td>
                                            <td>@item.Existencia</td>
                                            <td>@item.Estado</td>
                                            <td>@Html.ActionLink("Editar","Editar", new{Codigo_producto = item.Codigo_producto}) | @Html.ActionLink("Eliminar","Eliminar", new{Codigo_producto = item.Codigo_producto})</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                </div>
        </div>
    </div>
</div>