@model SistemaFacturacionWeb.Models.Producto
@{
    ViewData["Title"] = "Editar producto";
}
<div class="py-3">
    <div class="container mx-auto px-4 py-2">
        <h1 class="text-center text-3xl uppercase bold tracking-wider">
            @ViewData["Title"]
        </h1>
        <div class="flex flex-col mt-10 items-center">
            <form class="bg-teal-50 w-full md:w-2/3 xl:w-1/3 py-5 px-5 mb-10 lg:mb-5 shadow-lg rounded-md" method="post" asp-action="Editar">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Codigo_producto"/>
                    <div class="mb-5">
                        <label asp-for="Nombre" class="control-label"></label>
                        <input asp-for="Nombre"  class="border-2 w-full p-2 mt-2 rounded-md">
                        <span asp-validation-for="Nombre" class="text-red-400"></span>
                    </div>
                    <div class="mb-5">
                        <label asp-for="Descripcion" class="control-label"></label>
                        <input asp-for="Descripcion"  class="border-2 w-full p-2 mt-2 rounded-md">
                    </div>
                    <div class="mb-5">
                        <label asp-for="Precio" class="control-label"></label>
                        <input asp-for="Precio"  class="border-2 w-full p-2 mt-2 rounded-md">
                        <span asp-validation-for="Precio" class="text-red-400"></span>
                    </div>
                    <div class="mb-5">
                        <label asp-for="Costo" class="control-label"></label>
                        <input asp-for="Costo"  class="border-2 w-full p-2 mt-2 rounded-md">
                        <span asp-validation-for="Costo" class="text-red-400"></span>
                    </div>
                    <div class="mb-5">
                        <label asp-for="Existencia" class="control-label"></label>
                        <input asp-for="Existencia"  class="border-2 w-full p-2 mt-2 rounded-md">
                        <span asp-validation-for="Existencia" class="text-red-400"></span>
                    </div>
                    <div class="mb-5">
                        <label asp-for="Estado" class="control-label"></label>
                            @Html.DropDownListFor(model=>model.Estado, new List<SelectListItem>()
                            {
                                new SelectListItem() {Text = "Activo", Value="A" },
                                new SelectListItem() {Text = "Inactivo", Value="I" }
                            })
                            <span asp-validation-for="Estado" class="text-red-400"></span>
                    </div>
                    <div class="flex justify-center">
                        <input type="submit" value="Guardar"
                            class="bg-teal-600 px-5 py-2 uppercase text-white mb-5 rounded-md hover:bg-teal-700 cursor-pointer">
                    </div>
            </form>
        </div>
    </div>
</div>