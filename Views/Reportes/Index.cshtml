@{
    ViewData["Title"] = "Reportes";
}
<div class="py-3">
    <div class="container mx-auto px-4 py-2">
        <h1 class="text-center text-3xl uppercase bold tracking-wider">
            @ViewData["Title"]
        </h1>
<div class="flex flex-col mt-10 items-center">
    <form class="bg-teal-50 w-full md:w-2/3 xl:w-1/3 py-5 px-5 mb-10 lg:mb-5 shadow-lg rounded-md" method="post" >
      
       
       
        <div class="flex justify-center">
            <input type="submit" value="Ventas por Producto"
                class="bg-teal-600 px-5 py-2 uppercase text-white mb-5 rounded-md hover:bg-teal-700 cursor-pointer" asp-action="Rep_Producto">
        </div>

         <div class="flex justify-center">
            <input type="submit" value="Ventas por Cliente"
                class="bg-teal-600 px-5 py-2 uppercase text-white mb-5 rounded-md hover:bg-teal-700 cursor-pointer" asp-action="Rep_Cliente">
        </div>

         <div class="flex justify-center">
            <input type="submit" value="Estadisticas de Facturas"
                class="bg-teal-600 px-5 py-2 uppercase text-white mb-5 rounded-md hover:bg-teal-700 cursor-pointer" asp-action="Rep_Factura">
        </div>

    </form>
</div>
</div>
    </div>
</div>
