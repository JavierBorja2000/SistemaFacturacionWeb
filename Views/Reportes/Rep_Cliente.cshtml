@model SistemaFacturacionWeb.Models.Reportes;
@{
    ViewData["Title"] = "Reporte por Cliente";
}
<div class="py-3">
    <div class="container mx-auto px-4 py-2">
        <h1 class="text-center text-3xl uppercase bold tracking-wider">
            @ViewData["Title"]
        </h1>
<div class="flex flex-col mt-10 items-center">
    <form class="bg-teal-50 w-full md:w-2/3 xl:w-1/3 py-5 px-5 mb-10 lg:mb-5 shadow-lg rounded-md" method="post" asp-action="Create">
        <div class="mb-5">
            <label asp-for="Fecha1" class="control-label"></label>
            <input asp-for="Fecha1"  class="border-2 w-full p-2 mt-2 rounded-md">
           
        </div>
         <div class="mb-5">
            <label asp-for="Fecha2" class="control-label"></label>
            <input asp-for="Fecha2"  class="border-2 w-full p-2 mt-2 rounded-md">
            
        </div>
         <div class="mb-5">
            <label asp-for="Nombre" class="control-label"></label>
            <input asp-for="Nombre"  class="border-2 w-full p-2 mt-2 rounded-md">
            
        </div>

         <div class="flex justify-center">
            <input type="submit" value="Buscar"
                class="bg-teal-600 px-5 py-2 uppercase text-white mb-5 rounded-md hover:bg-teal-700 cursor-pointer">
        </div>
         

       
        
    </form>
</div>
</div>
    </div>
</div>