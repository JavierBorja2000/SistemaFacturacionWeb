@model SistemaFacturacionWeb.Models.Reporte_cliente;
@{
    ViewData["Title"] = "Reporte ventas por cliente";
}
<div class="py-3">
    <div class="container mx-auto px-4 py-2">
        <h1 class="text-center text-3xl uppercase bold tracking-wider">
            @ViewData["Title"]
        </h1>
        <div class="flex flex-col mt-10 items-center">
            <form class="bg-teal-50 w-full  py-5 px-5 mb-10 lg:mb-5 shadow-lg rounded-md" method="post" asp-action="Rep_Cliente">
                <span  class="text-red-400">@TempData["Error"]</span>
                <div class="mb-5">
                    <label asp-for="Reporte2ViewModel.Fecha1" class="control-label"></label>
                    <input asp-for="Reporte2ViewModel.Fecha1"  class="border-2 w-full p-2 mt-2 rounded-md">
                </div>
                <div class="mb-5">
                    <label asp-for="Reporte2ViewModel.Fecha2" class="control-label"></label>
                    <input asp-for="Reporte2ViewModel.Fecha2"  class="border-2 w-full p-2 mt-2 rounded-md">
                    <span asp-validation-for="Reporte2ViewModel.Fecha2" class="text-red-400"></span>
                </div>
                <div class="mb-5">
                    <label asp-for="Reporte2ViewModel.Nombre_Completo" class="control-label"></label>
                    <input asp-for="Reporte2ViewModel.Nombre_Completo"  class="border-2 w-full p-2 mt-2 rounded-md">
                </div>
                <div class="flex justify-center">
                    <input type="submit" value="Buscar" class="text-gray-200 bg-teal-600 hover:bg-gray-900 font-semibold uppercase tracking-wider transition-all duration-500 px-5 py-2 mb-5 rounded-md cursor-pointer">
                </div>

                @if(Model.ResultadosClientes.Count()>0){
                    <div class="overflow-x-scroll sm:overflow-auto">
                        <table class="w-full text-md text-left">
                            <thead class="uppercase font-bold text-center tracking-wide bg-teal-500 text-white">
                                <tr>
                                    <td class="border border-teal-800 px-3 py-1">@Html.DisplayNameFor(m => m.ResultadosClientes.First().Fecha)</td>
                                    <td class="border border-teal-800 px-3 py-1">@Html.DisplayNameFor(m => m.ResultadosClientes.First().Nombre)</td>
                                    <td class="border border-teal-800 px-3 py-1">@Html.DisplayNameFor(m => m.ResultadosClientes.First().Apellido)</td>
                                    <td class="border border-teal-800 px-3 py-1">@Html.DisplayNameFor(m => m.ResultadosClientes.First().Total)</td>
                                </tr>
                            </thead>
                            <tbody> 
                                @foreach (var item in Model.ResultadosClientes )
                                {
                                    <tr>
                                        <td class="border border-teal-800 px-3 py-1">@item.Fecha.ToShortDateString()</td>
                                        <td class="border border-teal-800 px-3 py-1">@item.Nombre</td>
                                        <td class="border border-teal-800 px-3 py-1">@item.Apellido</td>
                                        <td class="border border-teal-800 px-3 py-1">@item.Total</td> 
                                    </tr>
                                } 
                            </tbody>
                        </table>
                    </div> 
                }
            </form>
        </div>
    </div>
</div>
