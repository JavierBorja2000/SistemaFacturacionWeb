@model SistemaFacturacionWeb.Models.Usuario
@{
    Layout = "~/Views/Shared/_LayoutAcceso.cshtml";
    ViewData["Title"] = "Iniciar Sesion";
}
<div class="flex flex-col mt-10 items-center">
    <form class="bg-teal-50 w-full lg:w-2/3 xl:w-1/3 py-5 px-10 mb-10 lg:mb-5 shadow-xl rounded-md" method="post" asp-action="Login">
        <div class="mb-5 flex flex-col lg:flex-row items-center gap-5 justify-between">
            <label asp-for="Email"></label>
            <input asp-for="Email" placeholder="Tu Email" class="border-2 w-3/5 p-2 mt-2 rounded-md">
        </div>
        <div class="mb-5 flex flex-col lg:flex-row items-center gap-5 justify-between">
            <label asp-for="Password"></label>
            <input asp-for="Password" placeholder="Tu Password" class="border-2 w-3/5 p-2 mt-2 rounded-md">
        </div>
        <span class="text-red-400 font-bold">@Html.Label((string) ViewBag.Error)</span>
        <div class="flex justify-center gap-5 content-center py-2">
            <input type="submit" value="Ingresar"
                class="bg-teal-600 mt-5 px-5 py-2 uppercase text-white mb-5 rounded-md hover:bg-teal-700 cursor-pointer">
        </div>
        <p class="text-teal-600 hover:text-teal-700 font-bold px-5 text-center">
            @Html.ActionLink("¿No tienes una cuenta? Regístrate", "Registrar", "Access")</p>
    </form>
</div>