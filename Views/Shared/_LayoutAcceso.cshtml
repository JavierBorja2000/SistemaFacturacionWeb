<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SistemaFacturacionWeb</title>
    <link rel="stylesheet" href="~/css/tailwind.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SistemaFacturacionWeb.styles.css" asp-append-version="true" />
</head>

<body>
    <header class="py-5 bg-teal-700 mb-5">
        <div
            class="container mx-auto text-lg flex flex-col lg:flex-row justify-between items-center text-white uppercase tracking-wider">
            <a class="font-bold" asp-area="" asp-controller="Home" asp-action="Index">SistemaFacturacionWeb</a>
        </div>
    </header>
    <div>
        <main role="main" class="py-3">
            <div class="container mx-auto px-4 py-2">
                <h1 class="text-center text-3xl uppercase bold tracking-wider">
                    @ViewData["Title"]
                </h1>
                @RenderBody()
            </div>
        </main>
    </div>

    <footer class="px-6 py-5">
        <div class="text-center font-bold">
            &copy; 2022 - SistemaFacturacionWeb - Privacy
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
