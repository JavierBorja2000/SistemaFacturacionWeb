@model SistemaFacturacionWeb.Models.ViewModels.RegistrarUsuarioViewModel
@{
    ViewData["Title"] = "Agregar usuario";
}
<div class="py-3">
    <div class="container mx-auto px-4 py-2">
        <h1 class="text-center text-3xl uppercase bold tracking-wider">
            @ViewData["Title"]
        </h1>
        <div class="flex flex-col mt-10 items-center">
            <form class="bg-teal-50 w-full md:w-2/3 xl:w-1/3 py-5 px-5 mb-10 lg:mb-5 shadow-lg rounded-md" method="post"
                asp-action="Create">
                <div class="mb-5">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" placeholder="Email" class="border-2 w-full p-2 mt-2 rounded-md">
                    <span asp-validation-for="Email" class="text-red-400"></span>
                </div>
                <div class="mb-5">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" placeholder="Password" class="border-2 w-full p-2 mt-2 rounded-md">
                    <span asp-validation-for="Password" class="text-red-400"></span>
                </div>
                <div class="mb-5">
                    <label asp-for="ConfirmPassword" class="control-label"></label>
                    <input asp-for="ConfirmPassword" placeholder="Repite Password"
                        class="border-2 w-full p-2 mt-2 rounded-md">
                    <span asp-validation-for="ConfirmPassword" class="text-red-400"></span>
                </div>
                <div class="flex justify-center">
                    <input type="submit" value="Agregar usuario"
                        class="text-gray-200 bg-teal-600 hover:bg-gray-900 font-semibold uppercase tracking-wider transition-all duration-500 px-5 py-2 mb-5 rounded-md cursor-pointer">
                </div>
            </form>
        </div>
    </div>
</div>