@model SistemaFacturacionWeb.Models.Cliente;
@{
    ViewData["Title"] = "Editar Cliente";
}
<div class="py-3">
    <div class="container mx-auto px-4 py-2">
        <h1 class="text-center text-3xl uppercase bold tracking-wider">
            @ViewData["Title"]
        </h1>
<div class="flex flex-col mt-10 items-center">
    <form class="bg-teal-50 w-full md:w-2/3 xl:w-1/3 py-5 px-5 mb-10 lg:mb-5 shadow-lg rounded-md" method="post" asp-action="Editar">
       <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           <input type="hidden" asp-for="Codigo_cliente"/>
        <div class="mb-5">
            <label asp-for="Nombres" class="control-label"></label>
            <input asp-for="Nombres"  class="border-2 w-full p-2 mt-2 rounded-md">
            <span asp-validation-for="Nombres" class="text-red-400"></span>
        </div>
         <div class="mb-5">
            <label asp-for="Apellidos" class="control-label"></label>
            <input asp-for="Apellidos"  class="border-2 w-full p-2 mt-2 rounded-md">
            <span asp-validation-for="Apellidos" class="text-red-400"></span>
        </div>
         <div class="mb-5">
            <label asp-for="Nit" class="control-label"></label>
            <input asp-for="Nit"  class="border-2 w-full p-2 mt-2 rounded-md">
            <span asp-validation-for="Nit" class="text-red-400"></span>
        </div>
         <div class="mb-5">
            <label asp-for="Telefono" class="control-label"></label>
            <input asp-for="Telefono"  class="border-2 w-full p-2 mt-2 rounded-md">
            <span asp-validation-for="Telefono" class="text-red-400"></span>
        </div>
         <div class="mb-5">
             <label asp-for="Estado" class="control-label"></label>
                 @Html.DropDownListFor(model=>model.Estado, new List<SelectListItem>()
               {
                   new SelectListItem() {Text = "Activo", Value="A" },
                    new SelectListItem() {Text = "Inactivo", Value="I" }
               })
            <span asp-validation-for="Estado" class="text-red-400"></span>
        </div>
       
        <div class="flex justify-center">
            <input type="submit" value="Editar Cliente"
                class="text-gray-200 bg-teal-600 hover:bg-gray-900 font-semibold uppercase tracking-wider transition-all duration-500 px-5 py-2 mb-5 rounded-md  cursor-pointer">
        </div>
    </form>
</div>
</div>
    </div>
</div>
